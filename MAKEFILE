# =============================================================================
# Project makefile
# =============================================================================

# Settings - Edit the names of the object and executable files.

ASM = tasm
LINK = wlink

AFLAGS = /ml /m2 /w2 /z /zi /t
LFLAGS = option quiet system pmodew name $@ file   

lib = LIB\*.OBJ 
view = VIEW\*.OBJ
model = MODEL\*.OBJ
controler = CONTRLR\*.OBJ

objs = $(lib) $(view) $(controler) #$(model) 
dest = portal.exe

# =============================================================================
# Do NOT edit this section, unless you know what you are doing.
# =============================================================================
.asm: LIB/
.asm: MODEL/
.asm: VIEW/
.asm: CONTRLR/
.asm.obj:
  # use TASM with debug info (stripped anyway by wlink if not used)
  del $@
  $(ASM) $(AFLAGS) $< $@ 

$(dest): $(objs)
  $(LINK) $(LFLAGS) {$(objs)}

clean: .symbolic 
  del LIB\*.obj
  del MODEL\*.obj
  del CONTRLR\*.obj
  del VIEW\*.obj
  del $(dest)

.silent
debug: $(objs) .symbolic
  wlink debug watcom all option quiet system pmodew name $(dest) file {$(objs)}
  wd /tr=rsi /li=43 $(dest)
