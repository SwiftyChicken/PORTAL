# =============================================================================
# Project makefile
# =============================================================================

# Settings - Edit the names of the object and executable files.

ASM = tasm
LINK = wlink

AFLAGS = /ml /m2 /w2 /z /zi 
LFLAGS = option quiet system pmodew name $@ file   

objects1 = model\keyb.obj main.obj
dest = portal.exe

# =============================================================================
# Do NOT edit this section, unless you know what you are doing.
# =============================================================================
.asm.obj
  # use TASM with debug info (stripped anyway by wlink if not used)
  $(ASM) $(AFLAGS) $< 

$(dest): $(objects1)
  $(LINK) $(LFLAGS) {$(objects1)}

model\keyb.obj:
  $(ASM) $(AFLAGS) model\keyb.asm $@

clean: .symbolic
  del *.obj
  del $(dest)

.silent
debug: $(objects1) .symbolic
  wlink debug watcom all option quiet system pmodew name $(dest) file {$(objects1)}
  wd /tr=rsi /li=43 $(dest)
