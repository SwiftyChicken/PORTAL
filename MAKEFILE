# =============================================================================
# Project makefile
# =============================================================================

# Settings - Edit the names of the object and executable files.

ASM = tasm
LINK = wlink

AFLAGS = /ml /m2 /w2 /z /zi 
LFLAGS = option quiet system pmodew name $@ file   

model = keyb.obj
view = draw.obj
controler = main.obj

objs = $(model) $(view) $(controler)
dest = portal.exe

# =============================================================================
# Do NOT edit this section, unless you know what you are doing.
# =============================================================================
.asm: contrlr/
.asm: model/
.asm: view/
.asm.obj
  # use TASM with debug info (stripped anyway by wlink if not used)
  $(ASM) $(AFLAGS) $< $@ 

$(dest): $(objs)
  $(LINK) $(LFLAGS) {$(objs)}

clean: .symbolic 
  del *.obj
  del $(dest)

.silent
debug: $(objs) .symbolic
  wlink debug watcom all option quiet system pmodew name $(dest) file *.obj
  wd /tr=rsi /li=43 $(dest)
