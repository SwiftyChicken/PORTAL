# =============================================================================
# Project makefile
# =============================================================================

# Settings - Edit the names of the object and executable files.

ASM = tasm
LINK = wlink

AFLAGS = /ml /m2 /w2 /z /zi 
LFLAGS = option quiet system pmodew name $@ file   

model = model\keyb.obj
view = view\draw.obj
controler = contrlr\main.obj

objs = $(model) $(view) $(controler)
dest = portal.exe

# =============================================================================
# Do NOT edit this section, unless you know what you are doing.
# =============================================================================
.asm: CONTRLR/
.asm: MODEL/
.asm: VIEW/
.asm.obj
  # use TASM with debug info (stripped anyway by wlink if not used)
  $(ASM) $(AFLAGS) $< $@ 

$(dest): $(objs)
  $(LINK) $(LFLAGS) {$(objs)}

clean: .symbolic 
  del MODEL\*.obj
  del CONTRLR\*.obj
  del VIEW\*.obj
  del $(dest)

.silent
debug: $(objs) .symbolic
  wlink debug watcom all option quiet system pmodew name $(dest) file {$(objs)}
  wd /tr=rsi /li=43 $(dest)
